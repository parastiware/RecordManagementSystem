@model Employee
@{
    ViewData["Titlephrase"]="Edit Employee";
    string[] genders={"Male","Female","Others"};
   
}
<h3>Edit New Employee</h3>
<hr>
<form   asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName"></label><span class="text-danger" asp-validation-for="FirstName"></span>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
  </div>
   <div class="form-group">
    <label asp-for="LastName"></label>
    <input type="text" class="form-control" asp-for="MiddleName"  placeholder="Enter Middle Name">
  </div>
  <div class="form-group">
    <label asp-for="LastName"></label><span class="text-danger" asp-validation-for="LastName"></span>
    <input type="text" class="form-control" asp-for="LastName"  placeholder="Enter Last Name">
  </div>
  <div class="form-group">
    <label asp-for="Address"></label>
    <textarea class="form-control" asp-for="Address"  placeholder="Enter Address"></textarea>
  </div>
  <div class="form-group">
  <label asp-for="Gender"></label>
   @foreach(var gender in genders)
   {
     <div class="form-check">
  <input class="form-check-input" type="radio" asp-for="@gender" id="@gender" value="@gender[0]">
  <label class="form-check-label" for="@gender">
    @gender
  </label>
  </div>    
   } 
  </div>
  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
  </div>
  <button type="submit" class="btn btn-primary">Save Employee</button>
</form>